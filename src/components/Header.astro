---
import HeaderButton from "./HeaderButton.astro";
---

<header class="py-8 px-4 mx-auto lg:py-16">
  <nav class="flex flex-row justify-between mx-auto max-w-7xl items-center">
    <div class="logo">
      <img src="../../public/assets/f1_logo.webp" alt="F1 Logo" class="h-20" />
    </div>
    <div class="flex flex-row gap-6 h-10">
      <HeaderButton href=" ">
        Driver Standings
        <svg
          slot="before"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M12 4a9 9 0 0 1 5.656 16h-11.312a9 9 0 0 1 5.656 -16z"
          ></path>
          <path
            d="M20 9h-8.8a1 1 0 0 0 -.968 1.246c.507 2 1.596 3.418 3.268 4.254c2 1 4.333 1.5 7 1.5"
          ></path>
        </svg>
      </HeaderButton>
      <HeaderButton href="/">
        Constructor Standings
        <svg
          slot="before"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M3 7h10v10h-10z"></path>
          <path d="M6 10h4"></path>
          <path d="M8 10v4"></path>
          <path d="M8.104 17c.47 2.274 2.483 4 4.896 4a5 5 0 0 0 5 -5v-7h-5"
          ></path>
          <path d="M18 18a4 4 0 0 0 4 -4v-5h-4"></path>
          <path d="M13.003 8.83a3 3 0 1 0 -1.833 -1.833"></path>
          <path d="M15.83 8.36a2.5 2.5 0 1 0 .594 -4.117"></path>
        </svg>
      </HeaderButton>
      <HeaderButton href="/">
        Drivers
        <svg
          slot="before"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"></path>
          <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path>
          <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
          <path d="M21 21v-2a4 4 0 0 0 -3 -3.85"></path>
        </svg>
      </HeaderButton>
      <HeaderButton href="/">
        Races
        <svg
          slot="before"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M3 7l6 -3l6 3l6 -3v13l-6 3l-6 -3l-6 3v-13"></path>
          <path d="M9 4v13"></path>
          <path d="M15 7v13"></path>
        </svg>
      </HeaderButton>
    </div>
  </nav>
</header>
